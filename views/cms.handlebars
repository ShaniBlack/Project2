<div class="columns">
  <div class="column is-offset-3 is-one-third">
    <form id="cms">
      <div class="form-class">
        <div class="field">
          <div class="control">
            <label class="title">
              Country:
            </label>
            <input
              class="input is-rounded"
              id="title"
              placeholder="Country"
              type="text"
            />
          </div>
          <!-- <br /> -->
          <div class="control">
            <label class="city">
              City:
            </label>
            <input
              class="input is-rounded"
              id="city"
              placeholder="City"
              type="text"
            />
          </div>
          <!-- <br /> -->
          <div class="control">
            <label class="lodging">
              Lodging:
            </label>
            <input
              class="input is-rounded"
              id="lodging"
              placeholder="Lodging"
              type="text"
            />
          </div>
          <!-- <br /> -->
          <div class="control">
            <label class="ratings">
              Ratings:
            </label>
            <input
              class="input is-rounded"
              id="ratings"
              placeholder="Foods or Places you Enjoyed Most"
              type="text"
            />
          </div>
          <br />
          <div class="control">
            <label class="title">
              Activities:
            </label>
            <input
              class="input is-rounded"
              id="title"
              placeholder="Favorite Activities on Trip"
              type="text"
            />
          </div>
          <div class="control">
            <label class="body">
              Journal Entry:
            </label>
            <textarea
              class="textarea is-rounded is-half"
              placeholder="Journal"
              rows="10"
              id="body"
            ></textarea>
          </div>
          <label class="category">
            Select Traveler:
          </label>
          <div class="control has-icons-right">
            <div class="dropdown is-active">
              <div class="dropdown-trigger">
                <select class="input is-rounded" id="traveler">
                  <span class="icon is-small is-right">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                  </span>
                </select>
              </div>
            </div>
          </div>
        </div>
        <button class="button is-success is-rounded" type="submit">
          Submit
        </button>
      </div>
    </form>
    <br />
